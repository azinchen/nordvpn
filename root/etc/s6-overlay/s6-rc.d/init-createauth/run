#!/command/with-contenv sh
# shellcheck shell=sh

set -eu

. /usr/local/bin/backend-functions

log "INIT-CREATEAUTH" "Starting init-createauth script..."

echo "$user" > "$authfile"
echo "$pass" >> "$authfile"
chmod 0600 "$authfile"
chown nordvpn:nordvpn "$authfile"

log "INIT-CREATEAUTH" "init-createauth script completed successfully"
exit 0
