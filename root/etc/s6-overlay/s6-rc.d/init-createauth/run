#!/command/with-contenv sh
# shellcheck shell=sh

set -eu

. /usr/local/bin/backend-functions

SCRIPT_NAME="INIT-CREATEAUTH"

log "$SCRIPT_NAME" "Starting authentication setup"

log "$SCRIPT_NAME" "Creating VPN authentication file"
echo "$user" > "$authfile"
echo "$pass" >> "$authfile"
chmod 0600 "$authfile"
chown nordvpn:nordvpn "$authfile"

log "$SCRIPT_NAME" "Authentication setup completed"
exit 0
